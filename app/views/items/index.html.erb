<div>
  <% @categories.each do |category| %>
    <%= link_to "#{category.name}", category %>
  <% end %>

  <% @items.each do |item| %>
    <%= item.name %> <%= number_to_currency item.price %><br>
    <%= item.description %>
    <%= button_to "BUY", carts_path(item_id: item.id), class: "tiny button" %>
  <% end %>
</div>
