<div class="large-7 columns">
  <ul class="tabs" data-tab>
    <li class="tab-title active"><a href="#order_history">Order History</a></li>
    <li class="tab-title"><a href="#edit_account">Edit Account</a></li>
  </ul>
  <div class="tabs-content">
    <div class="content active" id="order_history">
      <table id="cart_table">
        <thead>
        <tr>
          <th width="100" class="text-center">Status</th>
          <th width="150" class="text-center">Date Ordered</th>
          <th width="100" class="text-center">Total</th>
          <th width="150"></th>
        </tr>
        </thead>
        <tbody>
        <% @user.orders.each do |order| %>
          <tr>
            <td class="text-center"><%= order.status %></td>
            <td class="text-center"><%= time_tag order.created_at, format: "%b %-d, %Y" %></td>
            <td class="text-right"><%= number_to_currency order.order_total %></td>
            <!--<td class="text-center"><#%= link_to "DETAILS", order, class: "tiny button" %></td>-->
            <td class="text-center">
              <a href="#" data-reveal-id="order_show" class="tiny button">DETAILS</a>
              <div id="order_show" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
                <%= render partial: 'orders/show', locals: { order: order } %>
                <a class="close-reveal-modal" aria-label="Close">&#215;</a>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="content" id="edit_account">
      <%= render 'form' %>
    </div>
  </div>
</div>
<div class="large-5 columns">more stuff</div>
