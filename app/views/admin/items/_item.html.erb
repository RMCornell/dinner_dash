<li id="<%= item.name %>" xmlns="http://www.w3.org/1999/html">
  <%= link_to admin_item_path(item), class: 'index_a' do %>
    <div class='row'>
      <% if item.active? %>
        <%= image_tag item.image.url, class: 'index_img' %>
      <% else %>
        <%= image_tag 'item_unavailable.jpg', class: 'index_img'%>
      <% end %>
    </div>
    <div class='row'>
      <%= item.name %>
      <%= number_to_currency item.price %>
    </div>
    <div class='row'>
      <p class="index_description"><%= item.description %></p>
    </div>
  <% end %>
</li>
