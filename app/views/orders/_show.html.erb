<h2 style="text-align:center">Order Details</h2>
<table class="order_table">
  <thead>
  <tr>
    <th class="text-center" width="200">Item</th>
    <th class="text-center">Description</th>
    <th class="text-center">Date</th>
    <th class="text-center">Quantity</th>
    <th class="text-center">Price</th>
    <th class="text-center">Subtotal</th>
  </tr>
  </thead>
  <tbody>
  <% order.order_items.each do |order_item| %>
    <tr>
      <td class="text-center"><%=link_to order_item.item.name, item_path(order_item.item.id) %></td>
      <td class="text-center"><%= order_item.item.description %></td>
      <td class="text-center"><%= time_tag order_item.created_at, format: "%b %-d, %Y %-l:%M %p"   %></td>
      <td class="text-center"><%= order_item.quantity %></td>
      <td class="text-center" style="text-align:left"><%= number_to_currency order_item.item.price %></td>
      <td class="text-center"><%= number_to_currency order_item.price_subtotal %></td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td class="text-center">Total</td>
  <td class="text-center"><%= number_to_currency order.total_cost %></td>
  <h4 style="text-align:center">Status: <%= order.status.capitalize %></h4>
  </tfoot>
</table>
