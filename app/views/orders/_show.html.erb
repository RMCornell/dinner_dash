<h1 style="text-align:center">Order Details</h1>
<table class="order_table">
  <thead>
  <tr>
    <th width="200">Item</th>
    <th>Description</th>
    <th>Date</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Subtotal</th>
  </tr>
  </thead>
  <tbody>
  <% order.order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= order_item.item.description %></td>
      <td><%= time_tag order_item.created_at, format: "%b %-d, %Y %-l:%M %p"   %></td>
      <td><%= order_item.quantity %></td>
      <td style="text-align:left"><%= number_to_currency order_item.item.price %></td>
      <td><%= number_to_currency order_item.price_subtotal %></td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td>Total</td>
  <td><%= number_to_currency order.total_cost %></td>
  <h4>Status: <%= order.status.capitalize %></h4>
  </tfoot>
</table>
